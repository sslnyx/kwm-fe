---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";

// Hero image import
import mcgillRender from "../assets/mcgill-render.png";
import father from "../assets/father.png";
import line_art from "../assets/line_art.png";
import mcgillLogo from "../assets/mcgill.svg";
import learnMoreBtn from "../assets/learn_more.svg";
import skeenaLogo from "../assets/skeena.svg";
import oakridgeLogo from "../assets/Oakridge.svg";
import bop1 from "../assets/bop-1.png";
import bop2 from "../assets/bop-2.png";
import bop3 from "../assets/bop-3.png";
---

<Layout title="Home">
	<main class="pt-20">
		<!-- Hero Section -->
		<section
			class="relative min-h-[600px] flex items-center overflow-hidden bg-white"
		>
			<!-- Green Sidebar -->
			<div
				class="absolute top-0 -left-[50%] bottom-0 w-[100vw] bg-primary z-20 -translate-x-[40vw] md:-translate-x-[23vw]"
			>
			</div>

			<!-- Background Line Art & Sky -->
			<div class="absolute inset-0 z-0">
				<Image
					src={line_art}
					alt="Architectural Drawing"
					loading="eager"
					fetchpriority="high"
					widths={[600, 900, 1200, 1800]}
					sizes="(max-width: 768px) 50vw, 30vw"
					class="absolute left-[50%] md:left-[70%] h-full object-cover object-left"
				/>
			</div>

			<div
				class="container relative z-10 flex flex-col md:flex-row items-center"
			>
				<div
					class="absolute left-1/2 -translate-x-[30vw] md:-translate-x-[18vw] top-1/2 -translate-y-1/2 animate-fade-in"
				>
					<div class="space-y-2 mb-5">
						<h1
							class="text-4xl md:text-7xl font-black uppercase tracking-tight leading-none flex flex-wrap md:flex-nowrap"
						>
							<span class="text-primary">Multiplex</span>
							<span class="text-secondary">Homes</span>
						</h1>
						<p
							class="text-3xl md:text-4xl font-bold text-secondary/60"
						>
							Building the Future with Intelligence
						</p>
					</div>

					<p
						class="text-base text-secondary/80 min-w-[280px] leading-relaxed font-medium"
					>
						Powered by 40 years of combined expertise, Kentwood
						Homes is reshaping Metro Vancouver with duplex and
						multiplex homes built for both today and tomorrow. Our
						intelligent approach to building, enhanced by AI-driven
						construction management tools and energy efficient
						systems, create homes that truly endure. Sustainable,
						future-ready and rooted within prime locations, this is
						living, reimagined.
					</p>
				</div>
			</div>
		</section>

		<!-- Featured Project Section (McGill) -->
		<section id="featured-project" class="relative">
			<div
				class="relative w-full aspect-[21/9] overflow-hidden h-[600px]"
			>
				<Image
					src={mcgillRender}
					alt="McGill Featured Project"
					widths={[640, 960, 1280, 1920]}
					sizes="100vw"
					class="w-full h-full object-cover"
				/>

				<!-- Featured Tag -->
				<div
					class="absolute top-8 left-0 bg-white/50 backdrop-blur-sm py-6 pl-12 pr-20"
					style="clip-path: polygon(0 0, 100% 0, 80% 100%, 0 100%);"
				>
					<p
						class="text-secondary font-bold uppercase tracking-[0.2em] text-xs mb-3 italic"
					>
						Featured Project
					</p>
					<div class="h-10">
						<Image
							src={mcgillLogo}
							alt="McGill"
							class="h-full w-auto"
						/>
					</div>
				</div>
			</div>

			<!-- Project Details Section -->
			<div class="bg-white pt-20 pb-12 relative">
				<!-- Learn More Button Overlay -->
				<div
					class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-1/2 z-30"
				>
					<a
						href="/projects/mcgill"
						class="bg-primary hover:bg-primary/90 text-white px-10 py-4 rounded-full font-black uppercase tracking-[0.2em] text-sm transition-all shadow-2xl hover:scale-105 active:scale-95 block whitespace-nowrap"
					>
						Learn More
					</a>
				</div>

				<div class="container text-center">
					<div class="space-y-4 mb-8">
						<h3
							class="text-xl md:text-2xl font-bold text-secondary flex items-center justify-center gap-4"
						>
							<span>McGill & Renfrew, Vancouver</span>
							<span class="text-secondary/30">|</span>
							<span>Five 3-bedroom Multiplexes</span>
						</h3>
						<p
							class="text-primary text-2xl font-black uppercase tracking-widest"
						>
							COMING SOON
						</p>
					</div>

					<p
						class="text-[10px] text-secondary/40 max-w-2xl mx-auto uppercase tracking-tighter"
					>
						All renderings and images are for illustrative purposes
						only and do not represent an exact depiction of the
						final product
					</p>
				</div>
			</div>
		</section>

		<!-- Upcoming Projects Banner -->
		<section class="bg-primary py-6">
			<div class="container">
				<h2
					class="text-white text-4xl md:text-5xl font-black text-center uppercase tracking-tighter italic"
				>
					Upcoming Projects
				</h2>
			</div>
		</section>

		<!-- Upcoming Projects Grid (Full Design) -->
		<section
			id="projects"
			class="py-20 bg-[#F4F5F6] relative overflow-hidden"
		>
			<div class="container relative z-10">
				<div class="grid md:grid-cols-2 gap-12 max-w-6xl mx-auto">
					<!-- Skeena Card -->
					<a
						href="/projects/skeena"
						class="relative group block transition-transform hover:scale-[1.02] duration-300 reveal-right"
					>
						<div
							class="bg-[#F9FBF1] p-12 shadow-2xl relative z-10 h-full"
						>
							<div
								class="flex flex-col items-center text-center space-y-6"
							>
								<div
									class="h-16 flex items-center justify-center"
								>
									<Image
										src={skeenaLogo}
										alt="Skeena"
										class="h-full w-auto"
									/>
								</div>
								<div class="w-12 h-1 bg-secondary/20"></div>
								<div class="space-y-1">
									<p
										class="text-secondary font-bold text-base"
									>
										Skeena & Grandview, Vancouver
									</p>
									<p
										class="text-secondary font-bold text-base"
									>
										Four 3-bedroom multiplexes
									</p>
								</div>
								<div class="pt-4 space-y-2">
									<p
										class="text-secondary font-black uppercase tracking-widest"
									>
										coming soon
									</p>
									<p
										class="text-primary font-black uppercase tracking-widest hover:underline block"
									>
										register
									</p>
								</div>
							</div>
						</div>
					</a>

					<!-- Oakridge Card -->
					<a
						href="/projects/oakridge"
						class="relative group block transition-transform hover:scale-[1.02] duration-300 reveal-left"
					>
						<div
							class="bg-[#F9FBF1] p-12 shadow-2xl relative z-10 h-full"
						>
							<div
								class="flex flex-col items-center text-center space-y-6"
							>
								<div
									class="h-16 flex items-center justify-center"
								>
									<Image
										src={oakridgeLogo}
										alt="Oakridge"
										class="h-full w-auto"
									/>
								</div>
								<div class="w-12 h-1 bg-secondary/20"></div>
								<div class="space-y-1">
									<p
										class="text-secondary font-bold text-base"
									>
										Oak & W 45th, Vancouver
									</p>
									<p
										class="text-secondary font-bold text-base"
									>
										Six 3-bedroom multiplexes
									</p>
								</div>
								<div class="pt-4 space-y-2">
									<p
										class="text-secondary font-black uppercase tracking-widest"
									>
										coming soon
									</p>
									<p
										class="text-primary font-black uppercase tracking-widest hover:underline block"
									>
										register
									</p>
								</div>
							</div>
						</div>
					</a>
				</div>
			</div>
		</section>

		<!-- Revamped Kentwood Difference Section -->
		<section id="difference" class="relative pt-0 pb-0 bg-white">
			<div class="relative py-32 overflow-hidden">
				<!-- Background Line Art Accent -->
				<div class="absolute top-0 left-0 w-full pointer-events-none">
					<Image
						src={line_art}
						alt=""
						class="w-full h-full object-cover object-top"
					/>
				</div>

				<div class="container relative z-10">
					<!-- Section Heading -->
					<div class="text-center space-y-4">
						<h2
							class="text-5xl md:text-7xl font-black uppercase tracking-tight"
						>
							<span class="text-secondary">The</span>
							<span class="text-primary">Kentwood</span>
							<span class="text-secondary">Difference</span>
						</h2>
						<p
							class="text-2xl md:text-3xl font-bold text-secondary"
						>
							The Smart Advantage Behind Our Multiplex Home
						</p>
					</div>
				</div>
			</div>

			<!-- Feature Image -->
			<div class="mx-auto mb-0 shadow-2xl rounded-sm w-full">
				<Image
					src={father}
					alt="The Kentwood Difference - Family Living"
					widths={[640, 960, 1280, 1920]}
					sizes="100vw"
					class="w-full h-auto aspect-[20/9] object-cover"
				/>
			</div>

			<!-- Descriptive Content -->
			<div class="bg-bg-light py-24 mt-0">
				<div class="max-w-3xl mx-auto px-4 reveal-up">
					<p
						class="text-base text-secondary font-medium leading-loose text-center"
					>
						Crafted with net-zero construction and outfitted with
						solar panels, our multiplex homes set a new benchmark
						for sustainable urban living. Thoughtfully engineered
						for superior energy efficiency, they deliver year-round
						comfort, healthier indoor environments and meaningful
						utility savings for homeowners. Located in Metro
						Vancouver's most sought-after neighbourhoods, these
						homes offer smarter living in the places people truly
						want to be.
					</p>
				</div>
			</div>
		</section>

		<!-- Built on Proven Excellence Section -->
		<section id="excellence" class="py-32 bg-bg-cream">
			<div class="container">
				<div class="text-center mb-20">
					<h2
						class="text-5xl md:text-7xl font-black uppercase tracking-tight"
					>
						<span class="text-secondary">Built on Proven</span>
						<span class="text-primary">Excellence</span>
					</h2>
				</div>

				<div class="grid md:grid-cols-3 gap-6 max-w-7xl mx-auto mb-20">
					<div
						class="aspect-square overflow-hidden shadow-xl reveal-up"
					>
						<Image
							src={bop1}
							alt="Custom Home Exterior"
							class="w-full h-full object-cover"
						/>
					</div>
					<div
						class="aspect-square overflow-hidden shadow-xl reveal-up"
					>
						<Image
							src={bop2}
							alt="Construction Planning"
							class="w-full h-full object-cover"
						/>
					</div>
					<div
						class="aspect-square overflow-hidden shadow-xl reveal-up"
					>
						<Image
							src={bop3}
							alt="Modern Interior"
							class="w-full h-full object-cover"
						/>
					</div>
				</div>

				<div class="max-w-4xl mx-auto text-secondary/80 space-y-8">
					<p class="text-base font-medium leading-relaxed">
						At Kentwood Homes, our award-winning team brings deep
						industry knowledge and a strong track record in building
						sustainable, energy-efficient custom homes, recognized
						through Georgie and HAVAN Awards. Now, we're channeling
						that expertise into the multiplex home market.
					</p>
					<p class="text-base font-medium leading-relaxed">
						From early planning and permits, to material selection
						and space design, our seasoned team handles every step
						with precision. And as the industry evolves, we keep
						elevating our craft to deliver smarter,
						higher-performing homes year after year.
					</p>
				</div>
			</div>
		</section>
	</main>
</Layout>
