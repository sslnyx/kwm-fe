---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";

import oakridgeLogo from "../../assets/Oakridge.svg";
---

<Layout title="Oakridge - Project Overview">
    <main class="pt-20">
        <section class="py-24 bg-white">
            <div class="container mx-auto px-4 text-center">
                <Image
                    src={oakridgeLogo}
                    alt="Oakridge Logo"
                    class="h-20 w-auto mx-auto mb-12"
                />
                <h1 class="text-6xl font-black uppercase text-secondary mb-6">
                    Oakridge
                </h1>
                <p class="text-2xl text-secondary/60 italic mb-12">
                    Oak & W 45th, Vancouver â€” Six 3-Bedroom Multiplexes
                </p>
                <div
                    class="max-w-2xl mx-auto p-12 bg-bg-cream rounded-[3rem] border border-primary/20"
                >
                    <p
                        class="text-primary font-bold uppercase tracking-widest text-sm mb-4"
                    >
                        Current Status
                    </p>
                    <h2
                        class="text-4xl font-black text-secondary uppercase mb-8"
                    >
                        Coming Soon
                    </h2>
                    <a
                        href="/register"
                        class="bg-primary text-white px-12 py-5 rounded-full font-bold uppercase tracking-widest hover:scale-105 transition-transform inline-block"
                        >Register for Updates</a
                    >
                </div>
            </div>
        </section>
    </main>
</Layout>
