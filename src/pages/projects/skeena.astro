---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Skeena - Kentwood Homes">
    <main class="pt-20">
        <!-- Full-Width Map Hero -->
        <section class="relative">
            <div class="w-full h-[50vh] md:h-[60vh]">
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2603.5!2d-123.035!3d49.285!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x548676e5b7e5f8d7%3A0x6e0c0d4e9e3b5c0e!2sSkeena%20St%20%26%20Grandview%20Hwy%2C%20Vancouver%2C%20BC!5e0!3m2!1sen!2sca!4v1702951200000!5m2!1sen!2sca"
                    width="100%"
                    height="100%"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"
                    title="Skeena Street Location Map"></iframe>
            </div>
        </section>

        <!-- Project Info Section -->
        <section class="py-12 bg-white border-b border-gray-100">
            <div class="container mx-auto px-4">
                <!-- Title Row with Register Button -->
                <div
                    class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-4"
                >
                    <div
                        class="flex flex-col md:flex-row md:items-baseline gap-2 md:gap-4"
                    >
                        <h1
                            class="text-3xl md:text-4xl font-bold text-secondary"
                        >
                            Skeena
                        </h1>
                        <span class="text-secondary/60 text-lg">
                            | 2905 Skeena Street
                        </span>
                    </div>
                    <a
                        href="/register"
                        class="bg-primary text-white px-8 py-3 rounded-full font-bold text-sm uppercase tracking-wide hover:bg-primary/90 transition-colors inline-block text-center shadow-md w-fit"
                    >
                        Register Now
                    </a>
                </div>

                <!-- Coming Soon Badge -->
                <div class="space-y-1">
                    <p class="text-primary font-bold uppercase tracking-wide">
                        COMING SOON
                    </p>
                    <p class="text-secondary/60">Register for latest updates</p>
                </div>
            </div>
        </section>
    </main>
</Layout>
