---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Register">
    <main class="pt-20">
        <section class="py-24 bg-bg-cream min-h-screen">
            <div
                class="container mx-auto px-4 max-w-4xl bg-white rounded-[3rem] p-12 md:p-20 shadow-xl border border-primary/5"
            >
                <div class="text-center mb-16">
                    <h1 class="text-5xl font-black uppercase text-primary mb-6">
                        Register
                    </h1>
                    <p class="text-xl text-secondary/60">
                        Stay in the loop on new builds, upcoming projects and
                        finish opportunities to make one yours.
                    </p>
                </div>

                <form class="space-y-8">
                    <div class="grid md:grid-cols-2 gap-8">
                        <div class="space-y-2">
                            <label
                                for="firstName"
                                class="text-xs font-bold uppercase tracking-widest text-secondary/40 px-2"
                                >First Name</label
                            >
                            <input
                                type="text"
                                id="firstName"
                                class="w-full bg-bg-light/50 border-b-2 border-primary/10 px-4 py-3 focus:border-primary outline-none transition-all rounded-lg"
                                required
                            />
                        </div>
                        <div class="space-y-2">
                            <label
                                for="lastName"
                                class="text-xs font-bold uppercase tracking-widest text-secondary/40 px-2"
                                >Last Name</label
                            >
                            <input
                                type="text"
                                id="lastName"
                                class="w-full bg-bg-light/50 border-b-2 border-primary/10 px-4 py-3 focus:border-primary outline-none transition-all rounded-lg"
                                required
                            />
                        </div>
                    </div>

                    <div class="grid md:grid-cols-2 gap-8">
                        <div class="space-y-2">
                            <label
                                for="email"
                                class="text-xs font-bold uppercase tracking-widest text-secondary/40 px-2"
                                >Email</label
                            >
                            <input
                                type="email"
                                id="email"
                                class="w-full bg-bg-light/50 border-b-2 border-primary/10 px-4 py-3 focus:border-primary outline-none transition-all rounded-lg"
                                required
                            />
                        </div>
                        <div class="space-y-2">
                            <label
                                for="phone"
                                class="text-xs font-bold uppercase tracking-widest text-secondary/40 px-2"
                                >Phone</label
                            >
                            <input
                                type="tel"
                                id="phone"
                                class="w-full bg-bg-light/50 border-b-2 border-primary/10 px-4 py-3 focus:border-primary outline-none transition-all rounded-lg"
                                required
                            />
                        </div>
                    </div>

                    <div class="space-y-4">
                        <p
                            class="text-sm font-bold uppercase tracking-widest text-secondary/60"
                        >
                            Which project are you interested in?
                        </p>
                        <div class="flex flex-wrap gap-6">
                            <label
                                class="flex items-center gap-3 cursor-pointer"
                            >
                                <input
                                    type="checkbox"
                                    class="accent-primary w-5 h-5 rounded"
                                />
                                <span class="text-secondary font-medium italic"
                                    >McGill</span
                                >
                            </label>
                            <label
                                class="flex items-center gap-3 cursor-pointer"
                            >
                                <input
                                    type="checkbox"
                                    class="accent-primary w-5 h-5 rounded"
                                />
                                <span class="text-secondary font-medium italic"
                                    >Skeena</span
                                >
                            </label>
                            <label
                                class="flex items-center gap-3 cursor-pointer"
                            >
                                <input
                                    type="checkbox"
                                    class="accent-primary w-5 h-5 rounded"
                                />
                                <span class="text-secondary font-medium italic"
                                    >OakRidge</span
                                >
                            </label>
                        </div>
                    </div>

                    <div class="space-y-4">
                        <p
                            class="text-sm font-bold uppercase tracking-widest text-secondary/60"
                        >
                            Are you a: (Check the most suitable role)
                        </p>
                        <div class="flex flex-wrap gap-6">
                            <label
                                class="flex items-center gap-3 cursor-pointer"
                            >
                                <input
                                    type="radio"
                                    name="role"
                                    class="accent-primary w-5 h-5"
                                />
                                <span class="text-secondary font-medium"
                                    >Realtor</span
                                >
                            </label>
                            <label
                                class="flex items-center gap-3 cursor-pointer"
                            >
                                <input
                                    type="radio"
                                    name="role"
                                    class="accent-primary w-5 h-5"
                                />
                                <span class="text-secondary font-medium"
                                    >Investor</span
                                >
                            </label>
                            <label
                                class="flex items-center gap-3 cursor-pointer"
                            >
                                <input
                                    type="radio"
                                    name="role"
                                    class="accent-primary w-5 h-5"
                                />
                                <span class="text-secondary font-medium"
                                    >Homeowner</span
                                >
                            </label>
                            <label
                                class="flex items-center gap-3 cursor-pointer"
                            >
                                <input
                                    type="radio"
                                    name="role"
                                    class="accent-primary w-5 h-5"
                                />
                                <span class="text-secondary font-medium"
                                    >Buyer</span
                                >
                            </label>
                        </div>
                    </div>

                    <div class="space-y-4">
                        <p
                            class="text-sm font-bold uppercase tracking-widest text-secondary/60"
                        >
                            How Did you Hear From us:
                        </p>
                        <div class="flex flex-wrap gap-6">
                            <label
                                class="flex items-center gap-3 cursor-pointer"
                            >
                                <input
                                    type="radio"
                                    name="source"
                                    class="accent-primary w-5 h-5"
                                />
                                <span class="text-secondary font-medium"
                                    >Referral</span
                                >
                            </label>
                            <label
                                class="flex items-center gap-3 cursor-pointer"
                            >
                                <input
                                    type="radio"
                                    name="source"
                                    class="accent-primary w-5 h-5"
                                />
                                <span class="text-secondary font-medium"
                                    >Signage</span
                                >
                            </label>
                            <label
                                class="flex items-center gap-3 cursor-pointer"
                            >
                                <input
                                    type="radio"
                                    name="source"
                                    class="accent-primary w-5 h-5"
                                />
                                <span class="text-secondary font-medium"
                                    >Instagram</span
                                >
                            </label>
                            <label
                                class="flex items-center gap-3 cursor-pointer"
                            >
                                <input
                                    type="radio"
                                    name="source"
                                    class="accent-primary w-5 h-5"
                                />
                                <span class="text-secondary font-medium"
                                    >Facebook</span
                                >
                            </label>
                        </div>
                    </div>

                    <div class="space-y-2">
                        <label
                            for="comments"
                            class="text-xs font-bold uppercase tracking-widest text-secondary/40 px-2"
                            >Comments</label
                        >
                        <textarea
                            id="comments"
                            rows="4"
                            class="w-full bg-bg-light/50 border-b-2 border-primary/10 px-4 py-3 focus:border-primary outline-none transition-all rounded-lg resize-none"
                        ></textarea>
                    </div>

                    <div class="flex items-start gap-3">
                        <input
                            type="checkbox"
                            required
                            class="accent-primary w-5 h-5 mt-1"
                        />
                        <p class="text-sm text-secondary/60 leading-relaxed">
                            I agree to allow Kentwood Home and its affiliates to
                            contact me via phone and email. I understand I can
                            unsubscribe at any time.
                        </p>
                    </div>

                    <button
                        type="submit"
                        class="w-full bg-primary text-white font-bold uppercase py-6 rounded-full hover:scale-[1.01] transition-transform shadow-xl shadow-primary/30 text-lg"
                    >
                        Submit
                    </button>
                </form>
            </div>
        </section>
    </main>
</Layout>
