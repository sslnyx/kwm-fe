---
import { Image } from "astro:assets";
import logo from "../assets/footer-logo.svg";
import warrantyLogos from "../assets/2510-os.svg";
import awardLogos from "../assets/logos.svg";
---

<footer class="bg-secondary text-white pt-24 pb-0 relative overflow-hidden">
    <div class="container">
        <!-- Top Section -->
        <div class="grid md:grid-cols-12 gap-12 mb-10">
            <!-- Left: Logo & Contact -->
            <div class="md:col-span-5 space-y-8">
                <a href="/" class="inline-block">
                    <Image
                        src={logo}
                        alt="Kentwood Multiplex Logo"
                        class="h-16 w-auto"
                    />
                </a>
                <div
                    class="space-y-1 text-base text-white/80 font-medium leading-relaxed"
                >
                    <a
                        href="https://www.google.com/maps/search/?api=1&query=1030+-+8477+Bridgeport+Road,+Richmond,+BC+V6X+0S8+Canada"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="hover:text-primary transition-colors block"
                    >
                        <p>1030 - 8477 Bridgeport Road</p>
                        <p>Richmond, BC V6X 0S8 Canada</p>
                    </a>
                    <p>
                        <a
                            href="mailto:info@kentwoodhomes.ca"
                            class="hover:text-primary transition-colors"
                            >info@kentwoodhomes.ca</a
                        >
                    </p>
                    <p>
                        <a
                            href="tel:6723350088"
                            class="hover:text-primary transition-colors"
                        >
                            672.335.0088
                        </a>
                    </p>
                </div>
            </div>

            <!-- Right: Navigation Links -->
            <div
                class="md:col-span-7 flex flex-wrap justify-start md:justify-between gap-y-12 gap-x-5"
            >
                <div class="space-y-6 min-w-[200px]">
                    <h4
                        class="font-black uppercase tracking-widest text-sm text-white whitespace-nowrap"
                    >
                        Featured Projects
                    </h4>
                    <ul class="text-white/70 text-base font-medium space-y-0">
                        <li>
                            <a
                                href="/projects/mcgill"
                                class="hover:text-white transition-colors"
                                >McGill</a
                            >
                        </li>
                        <li>
                            <a
                                href="/projects/skeena"
                                class="hover:text-white transition-colors"
                                >Skeena</a
                            >
                        </li>
                        <li>
                            <a
                                href="/projects/oakridge"
                                class="hover:text-white transition-colors"
                                >Oak</a
                            >
                        </li>
                    </ul>
                </div>

                <div class="space-y-6">
                    <h4
                        class="font-black uppercase tracking-widest text-sm text-white whitespace-nowrap"
                    >
                        About
                    </h4>
                    <ul class="text-white/70 text-base font-medium space-y-0">
                        <li>
                            <a
                                href="/about/#our-story"
                                class="hover:text-white transition-colors"
                                >Our Story</a
                            >
                        </li>
                        <li>
                            <a
                                href="/about/#our-vision"
                                class="hover:text-white transition-colors"
                                >Our Vision</a
                            >
                        </li>
                        <li>
                            <a
                                href="/about/#our-team"
                                class="hover:text-white transition-colors"
                                >Our Team</a
                            >
                        </li>
                    </ul>
                </div>

                <div class="flex">
                    <a
                        href="/faq"
                        class="font-black uppercase tracking-widest text-sm text-white hover:text-primary transition-colors whitespace-nowrap"
                        >FAQs</a
                    >
                </div>

                <div class="flex">
                    <a
                        href="/contact"
                        class="font-black uppercase tracking-widest text-sm text-white hover:text-primary transition-colors whitespace-nowrap"
                        >Contact</a
                    >
                </div>

                <div class="flex">
                    <a
                        href="/register"
                        class="font-black uppercase tracking-widest text-sm text-white hover:text-primary transition-colors whitespace-nowrap"
                        >Register</a
                    >
                </div>
            </div>
        </div>

        <!-- Bottom Logo Section -->
        <div
            class="flex flex-col md:flex-row justify-between items-end gap-12 pb-12"
        >
            <!-- Left: Warranty & OpenSpace -->
            <div class="w-full md:w-auto">
                <Image
                    src={warrantyLogos}
                    alt="2-5-10 Year Warranty and OpenSpace"
                    class="h-16 w-auto"
                />
            </div>

            <!-- Right: Awards -->
            <div class="w-full md:w-auto flex items-end">
                <Image
                    src={awardLogos}
                    alt="Awards and Accreditation"
                    class="h-24 w-auto"
                />
            </div>
        </div>
    </div>

    <!-- Shaped Legal Bar -->
    <div class="flex justify-center w-full">
        <div
            class="bg-white px-12 py-3 rounded-t-[40px] flex flex-col md:flex-row items-center gap-2 md:gap-8 text-[11px] font-bold uppercase tracking-widest text-secondary shadow-lg"
        >
            <p>Â©Kentwood Homes.</p>
            <div class="flex items-center gap-4">
                <a href="/privacy" class="hover:text-primary transition-colors"
                    >Privacy Policy</a
                >
                <span class="text-secondary/20">|</span>
                <a href="/terms" class="hover:text-primary transition-colors"
                    >Terms & Conditions</a
                >
            </div>
        </div>
    </div>
</footer>
